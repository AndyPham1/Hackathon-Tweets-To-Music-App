		<track>
			<instrument>chords</instrument>
			<transposition>0</transposition>
			<velocity>600</velocity>
			<sequenceEngine class="ChordSequenceEngine">
				<patternEngine class="StringPatternEngine">
					<string ticksPerBeat="4">0,-,-,0,-,-,0,-</string>
